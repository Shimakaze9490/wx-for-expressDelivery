/**app.wxss**/
/*
 * 全局样式表
 * 使用@import语句导入外联样式表,使用相对路径
 * 注意导入wxss的顺序.
*/

@import "assets/styles/weui.wxss";

page {
	height: 100%;
	font-size: 32rpx;
	line-height: 1.6;
	background-color: #f8f8f8;
	box-sizing: border-box;  
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.clearfix::after {
	font-size: 0;
	line-height: 0;
	display: block;
	visibility: hidden;
	clear: both;
	height: 0;
	content: "";
}